[Unit]
Description=Vera Vision Assistant (Raspberry Pi)
After=default.target pulseaudio.service pipewire.service

[Service]
Type=simple
WorkingDirectory=/home/pi/vera
EnvironmentFile=/home/pi/vera/.env
Environment=PATH=/home/pi/vera/venv/bin:/usr/local/bin:/usr/bin:/bin
Environment=VERA_HEADLESS=true
ExecStartPre=/bin/sleep 5
ExecStart=/home/pi/vera/venv/bin/python main.py
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target
